<%- include('../includes/header.ejs') %>
</head>
<body>
<%- include('../includes/navigation.ejs') %>
<h1>Admin Product</h1>
<% if (hasProducts) {%>
    
<div class="grid">
    <% for (let product of prods) { %>
    <article class="card product-item">
        <header class="card__header">
            <h1 class="product__title"><%= product.title %></h1>
        </header>
        <div class="card__image">
            <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
        </div>
        <div class="card__content">
            <h2 class="product__price">$<%= product.price %></h2>
            <p class="product__description"><%= product.description %></p>
        </div>
        <div class="card__actions">
            <!-- <form action="/admin/edit-product" method="post">
                <button type="submit" class="btn">Edit</button>
                <input type="hidden" name="thisProductId" value="<%= product.id %>">
            </form> -->
            <a href="/admin/edit-product/<%= product._id %>?edit=true" ><button class="btn">Edit</button></a>
            <!-- <a href="/admin/delete/<%= product.id %>" ><button class="btn">Delete</button></a> -->
            <form action="/admin/delete-product" method="post">
                <button type="submit" class="btn">Delete</button>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="thisProductId" value="<%= product._id %>">
            </form>
           
             

        </div>
    </article>
    <% } %>
</div>
<% } else {%>
<h1>No content to display</h1>

<% } %>
<%- include('../includes/footer.ejs') %>
